CREATE DATABASE CommunityMusic

USE CommunityMusic

CREATE TABLE Usuarios( 

    Usuario varchar PRIMARY KEY,
    Contraseña ntext NOT NULL,
    Nombre varchar NOT NULL,
    Apellido varchar NOT NULL,
    Correo varchar NOT NULL UNIQUE,
    Celular char NOT NULL 

)

CREATE TABLE Canciones ( 
    
    idalbum int FOREIGN KEY,
    Nombre varchar NOT NULL,
    Cantante varchar NOT NULL,
    Album varchar NOT NULL,
    Año date DEFAULT,
    Valoracion char NOT NULL

)

CREATE TABLE Albumes (  
        
    idalbum int PRIMARY KEY,
    idcantante int FOREIGN KEY,
    Nombre varchar NOT NULL,
    Cantante varchar NOT NULL,
    Album varchar NOT NULL,
    Año date DEFAULT,
    Valoracion char NOT NULL

)

CREATE TABLE Artistas (
    
    idcantante int PRIMARY KEY,
    Nombre varchar NOT NULL,
    Valoracion char NOT NULL

)
